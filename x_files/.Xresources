! ------------------------------------------------------------------------------
! General settings
! ------------------------------------------------------------------------------

Xft.dpi: 192
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------

rofi.color-enabled: true
rofi.color-window: argb:41353535, argb:4000000, argb:4000000
rofi.color-normal: #303133, #ffffff, #303133, argb:c8303133, #a020f0
rofi.color-active: #4a4a4a, #a020f0, #303133, #303133, #ffbb00
rofi.color-urgent: #303133, #dc322f, #303133, #303133, #f9ff00
rofi.opacity:                        95
rofi.width:                          50
rofi.font:                           Inconsolata 32

! ------------------------------------------------------------------------------
! urxvt
! ------------------------------------------------------------------------------

! special
*.foreground:   #ffffff
*.background:   #222222
*.cursorColor:  #ffffff

! black
*.color0:       #0c0d20
*.color8:       #323147

! red
*.color1:       #624fff
*.color9:       #45455b

! green
*.color2:       #72688b
*.color10:      #bca0f7

! yellow
*.color3:       #2c1f62
*.color11:      #4d3c88

! blue
*.color4:       #5a39ac
*.color12:      #605a72

! magenta
*.color5:       #3f279d
*.color13:      #7f76c7

! cyan
*.color6:       #ca87e1
*.color14:      #7a4a9e

! white
*.color7:       #845bdf
*.color15:      #937dae


URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.perl-ext-common:  default,tabbedex
URxvt.internalBorder:      0
URxvt.externalBorder:      0
URxvt.font: xft:Consolas:size=12
URxvt.scrollBar: false

urxvt*depth: 32
urxvt*background: rgba:1000/1000/1000/F200


urxvt*boldMode:      on
urxvt*colorMode:     on
urxvt*colorBDMode:   on
urxvt*colorULMode:   on
urxvt*underLine:     on