#! /bin/sh

sxhkd &

bspc config border_width         1
bspc config window_gap           25

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_by_distance    true
bspc config history_aware_focus  true

bspc config active_border_color \#40EB78

bspc config top_padding    48
bspc config bottom_padding 10

bspc monitor -d I II III IV V VI VII VIII IX X


bspc rule -a Spotify desktop='^4'


xrdb ~/.Xresources &
#Loading a smaller wallpaper while the ~150mb wallpaper loads
feh --bg-scale ~/Pictures/Wallpaper/temp_wall.jpg &
yabar &
compton --config ~/dotfiles/compton.conf & 
feh --bg-scale ~/Pictures/Wallpaper/wallpaper.jpg